<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/activity_main">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/back"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:textStyle="bold"
                android:text="Bhopal Coders Community VIPs (Volunteer in Progress)"
                android:layout_marginTop="20dp"
                android:layout_gravity="center_horizontal"></TextView>
            <ImageView
                android:layout_width="350dp"
                android:layout_gravity="center"
                android:layout_height="270dp"
                android:src="@drawable/fr"></ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"

                android:text="Bhopal Coders Community, is the backbone of the Tech Communities in Bhopal, such as Google Developers Group, Bhopal and Developer Circles from Facebook. Our efforts are aligned towards making Bhopal, a Technology Hub. We're looking for individuals enthusiastic about the Impact, Technology can bring.">
            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"

                android:text="@string/two">
            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"

                android:text="@string/three">
            </TextView>
            <Button
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="Go To Form"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:layout_gravity="center"
                android:id="@+id/form"
                android:layout_marginBottom="30dp"></Button>
            <Button
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="View Responses"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:layout_gravity="center"
                android:id="@+id/view"
                android:layout_marginBottom="30dp"></Button>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:textStyle="bold"
                android:text="For any queries, text us on WhatsApp:
                Sameer Khan: +918120266490">
            </TextView>

        </LinearLayout>
    </ScrollView>
</LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>